<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.assingment3.StudioManagerController">
   <center>
      <TabPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Membership">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <GridPane alignment="CENTER" layoutX="64.0" layoutY="50.0" prefHeight="271.0" prefWidth="473.0">
                          <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="232.0" minWidth="10.0" prefWidth="96.0" />
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="377.0" minWidth="10.0" prefWidth="377.0" />
                          </columnConstraints>
                          <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                          </rowConstraints>
                           <children>
                              <Label alignment="CENTER" prefHeight="29.0" prefWidth="94.0" text="Member Profile" />
                              <TextField fx:id="firstName" onKeyTyped="#setFname" promptText="first name" GridPane.columnIndex="1" />
                              <TextField fx:id="lastName" onKeyTyped="#setLname" promptText="last name" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                              <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="90.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                                 <children>
                                    <DatePicker fx:id="dob" editable="false" onAction="#setDOB" promptText="Select With Calendar" />
                                    <Button alignment="CENTER" mnemonicParsing="false" prefHeight="30.0" prefWidth="110.0" text="Cancel Existing" textAlignment="JUSTIFY" />
                                 </children>
                              </HBox>
                              <Label alignment="CENTER" prefHeight="17.0" prefWidth="100.0" text="Member Type" GridPane.rowIndex="4" />
                              <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="4">
                                 <children>
                                    <RadioButton fx:id="basicButton" mnemonicParsing="false" onAction="#memberButtonClick" prefHeight="17.0" prefWidth="81.0" text="Basic">
                                       <toggleGroup>
                                          <ToggleGroup fx:id="memberTypeSelect" />
                                       </toggleGroup></RadioButton>
                                    <RadioButton fx:id="familyButton" mnemonicParsing="false" onAction="#memberButtonClick" prefHeight="17.0" prefWidth="81.0" text="Family" toggleGroup="$memberTypeSelect" />
                                    <RadioButton fx:id="premiumButton" mnemonicParsing="false" onAction="#memberButtonClick" prefHeight="17.0" prefWidth="84.0" text="Premium" toggleGroup="$memberTypeSelect" />
                                    <Label prefHeight="17.0" prefWidth="67.0" text="Guest Pass:" />
                                    <Label fx:id="guestPassLabel" text="N/A" />
                                 </children>
                              </HBox>
                              <Label alignment="CENTER" prefHeight="17.0" prefWidth="99.0" text="Home Studio" GridPane.rowIndex="5" />
                              <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="5">
                                 <children>
                                    <RadioButton fx:id="studioBridgewater" mnemonicParsing="false" onAction="#studioButtonClick" text="Bridgewater">
                                       <toggleGroup>
                                          <ToggleGroup fx:id="studioTypeSelect" />
                                       </toggleGroup>
                                    </RadioButton>
                                    <RadioButton fx:id="studioEdison" mnemonicParsing="false" onAction="#studioButtonClick" text="Edison" toggleGroup="$studioTypeSelect" />
                                    <RadioButton fx:id="studioFranklin" mnemonicParsing="false" onAction="#studioButtonClick" text="Franklin" toggleGroup="$studioTypeSelect" />
                                    <RadioButton fx:id="studioPiscataway" mnemonicParsing="false" onAction="#studioButtonClick" text="Piscataway" toggleGroup="$studioTypeSelect" />
                                    <RadioButton fx:id="studioSomerville" mnemonicParsing="false" onAction="#studioButtonClick" text="Somerville" toggleGroup="$studioTypeSelect" />
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0" GridPane.columnIndex="1" GridPane.rowIndex="6">
                                 <children>
                                    <Button mnemonicParsing="false" text="Add New" />
                                    <Button mnemonicParsing="false" text="Load Members" />
                                 </children>
                              </HBox>
                              <Label fx:id="errorMsg" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                           </children>
                        </GridPane>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab text="Class Attendance">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </Tab>
            <Tab text="Class Schedule">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
              </content>
            </Tab>
            <Tab text="Studio Location">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
              </content>
            </Tab>
            <Tab text="Print By...">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
              </content>
            </Tab>
        </tabs>
      </TabPane>
   </center>
</BorderPane>
